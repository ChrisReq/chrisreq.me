---
export interface Props {
  type: "BlogPosting" | "Person" | "WebSite";
  data: any;
}

const { type, data } = Astro.props;

let structuredData = {};

if (type === "BlogPosting") {
  structuredData = {
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    headline: data.title,
    description: data.description,
    author: {
      "@type": "Person",
      name: data.author || "Chris Requardt",
      url: "https://chrisreq.me/about",
    },
    datePublished: data.pubDatetime.toISOString(),
    dateModified: data.modDatetime?.toISOString() || data.pubDatetime.toISOString(),
    publisher: {
      "@type": "Person",
      name: "Chris Requardt",
      logo: {
        "@type": "ImageObject",
        url: "https://chrisreq.me/chris-avatar.jpg",
      },
    },
    mainEntityOfPage: {
      "@type": "WebPage",
      "@id": data.url,
    },
    image: data.ogImage || "https://chrisreq.me/chris-avatar.jpg",
    articleSection: data.tags?.[0] || "Technology",
    keywords: data.tags?.join(", ") || "",
    wordCount: data.wordCount,
    timeRequired: data.readingTime,
  };
} else if (type === "Person") {
  structuredData = {
    "@context": "https://schema.org",
    "@type": "Person",
    name: "Chris Requardt",
    url: "https://chrisreq.me",
    image: "https://chrisreq.me/chris-avatar.jpg",
    sameAs: [
      "https://github.com/ChrisReq",
      "https://www.linkedin.com/in/chrisrequardt/",
      "https://www.threads.com/@chrisrequardt",
      "https://www.youtube.com/@Digi_Entrepreneur",
    ],
    jobTitle: "AI Enthusiast & Maker",
    description:
      "Passionate AI user. I build whatever I feel like.",
  };
} else if (type === "WebSite") {
  structuredData = {
    "@context": "https://schema.org",
    "@type": "WebSite",
    name: "Chris Requardt",
    url: "https://chrisreq.me",
    description:
      "Passionate AI user. I build whatever I feel like.",
    author: {
      "@type": "Person",
      name: "Chris Requardt",
    },
    potentialAction: {
      "@type": "SearchAction",
      target: "https://chrisreq.me/search?q={search_term_string}",
      "query-input": "required name=search_term_string",
    },
  };
}
---

<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
